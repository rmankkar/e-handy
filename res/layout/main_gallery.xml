<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gallery_LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backg"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        layout="@layout/topbar_purple" />

    <LinearLayout
        android:id="@+id/galleryiconcntnr"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/gallryicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gallery_icon" />

        <TextView
            android:id="@+id/gallery_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:text="Gallery"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/top_purple"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <Gallery
        android:id="@+id/gallery"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/divider" />

    <FrameLayout
        android:id="@+id/FrameLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="6dp"
            android:src="@drawable/gallery_bck" android:paddingRight="2dp"/>

        <ImageView
            android:id="@+id/gallery_ImageView"
            android:layout_width="295dp"
            android:layout_height="205dp"
            android:layout_gravity="center"
            android:background="#000000"
            android:scaleType="fitXY" />
    </FrameLayout>

</LinearLayout>